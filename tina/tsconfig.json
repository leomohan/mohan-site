// tina/tsconfig.json
{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs", // Important for Node.js require
    "outDir": "./__generated__", // Ensure this matches where Tina generates its files
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "declaration": true
  },
  "include": ["./**/*"],
  "exclude": ["node_modules"]
}