// tina/tsconfig.json
{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "outDir": "./__generated__", // This should match where Tina generates its files
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "declaration": true // Generate .d.ts files for type declarations
  },
  "include": ["./**/*"], // Include all files in the tina directory
  "exclude": ["node_modules"]
}